[alias]
	st = status
	ci = commit
	co = checkout
	df = diff
	dc = diff --cached
[branch]
	autosetuprebase = always
[checkout]
	defaultRemote = origin
[commit]
	gpgsign = true
[core]
	excludesfile = ~/.gitignore
	editor = code --wait --new-window
[credential]
	helper = osxkeychain
[diff]
	tool = vscode
[difftool "vscode"]
	cmd = code --wait --diff --new-window $LOCAL $REMOTE
[fetch]
	prune = true
[format]
	pretty = oneline
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers
[init]
	defaultBranch = main
[log]
	abbrevCommit = true
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait --new-window $MERGED
[push]
	autoSetupRemote = true
	default = simple
[tag]
	gpgsign = true
